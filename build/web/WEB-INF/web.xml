<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <servlet-name>sr_producto</servlet-name>
        <servlet-class>controlador.sr_producto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_producto</servlet-name>
        <url-pattern>/sr_producto</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sr_marca</servlet-name>
        <servlet-class>controlador.sr_marca</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_marca</servlet-name>
        <url-pattern>/sr_marca</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sr_venta</servlet-name>
        <servlet-class>controlador.sr_venta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sr_venta</servlet-name>
        <url-pattern>/sr_venta</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>